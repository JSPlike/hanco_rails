<div class="container">
  <div style="padding-top: 5%;">
    <h4 class="project-list-title-hc">내 프로젝트 리스트</h4>
    <hr>
    
    <%@participants.each do |p|%>
    <%temp = Project.find(p.project_id)%>
      <div class="card" style="display: inline-block;margin: 10px;width: 18em; height: auto;background-color: white; border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <div class="card-body poject-list-hc" style="padding: 8px;">
          <div class="list-header-target js-edinting-target is-hidden"></div>
          <h4 style="display: none;"><%=link_to temp.title, show_project_path(temp.id)%></h4>
          <textarea class="mod-list-name" aria-label="temp.title" maxlength="512" spellcheck="false" style="overflow: hidden; word-wrap: break-word; resize: horizontal;height: 26px; cursor: pointer;"><%=temp.title%></textarea>
          <h6 class="card-subtitle mb-2 text-muted">subtitle</h6>
          <p class="card-text"><%=temp.desc%></p>
          <%= link_to show_project_path(temp.id) do %>
            <button class="btn btn-success">프로젝트 입장</button>
          <%end%>
        </div>
      </div>
    <%end%>

    <!--
