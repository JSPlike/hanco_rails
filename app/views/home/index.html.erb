<div id="container">
    <div class="container-1">
        <div class="nav-hc">
            <div class="navbar-collapse collapse nav-inner-hc">
                <h1>HANCO</h1>
                <ul class="nav navbar-nav nav-inner-hc-ul-1">
                    <li class="active"><%=link_to '첫 화면', "/" %></li>
                    <li><%=link_to '소 개', "#introduce" %></li>
                    <li><%=link_to '문 의', "#" %></li>
                    <li><%=link_to '게시판', '/posts' %></li>
                </ul>

                <ul class="nav navbar-nav navbar-right nav-inner-hc-ul-2">
                    <% if user_signed_in? %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle name-color-hc" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu size-hc">    
                                <li><%= link_to "내 프로필", profile_path %></li>
                                <li class="project-a-color"><%= link_to "프로젝트", "/projects" %></li>
