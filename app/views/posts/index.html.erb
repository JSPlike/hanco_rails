<p id="notice"><%= notice %></p>

<h1>자유게시판</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scpe="col">#</th>
      <th scope="col">이름</th>
      <th scope="col">제목</th>
      <th scope="col">내용</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= current_user.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to '자세히', post %></td>
        <td><%= link_to '수정', edit_post_path(post) %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_post_path do %>
  <button class="btn btn-success">새 글쓰기</button>
<% end %>
